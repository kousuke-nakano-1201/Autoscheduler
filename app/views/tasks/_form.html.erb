  <div class="row">
    <% if @task.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="clearfix">
    <div class="col-xs-6">
    <div class="form-group">
      <%= f.label :task_title, 'タイトル' %>
      <%= f.text_field :task_title ,:placeholder => "教材タイトルを入力", class: 'form-control'%>
    </div> 
    </div> 
    </div> 
    <div class="clearfix">
    <div class="form-inline">
    <div class="form-group">
      <%= f.label :page_start, '開始ページ' %>
      <%= f.number_field :page_start ,:placeholder => "0 以上の整数", class: 'form-control'%>
      <%= f.label :page_end, '～終了ページ' %>
      <%= f.number_field :page_end ,:placeholder => "0 以上の整数", class: 'form-control'%>
    </div> 
    <div class="form-group">
      <%= f.label :time_par_page, '　1ページあたりの目安時間' %>
      <%= f.number_field :time_par_page ,:placeholder => "0 以上の整数", class: 'form-control'%><strong>分　</strong>
    </div>
    </div> 
    </div>
    
    <% if flag == 0 %>
      <%= f.submit '教材を登録', class: 'btn btn-primary' ,style: 'margin-top: 15px'%>
    <% else %>
      <%= f.submit '教材を更新', class: 'btn btn-primary' ,style: 'margin-top: 15px'%>
    <% end %>
  </div> 
