<h1><%= @schedule.schedule_title %> のスケジュール詳細ページ</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th rowspan="2">開始日</th>
      <th rowspan="2">終了日</th>
      <th colspan="7">勉強時間（時間）</th>
    </tr>
    <tr>
      <th>月曜日</th>
      <th>火曜日</th>
      <th>水曜日</th>
      <th>木曜日</th>
      <th>金曜日</th>
      <th>土曜日</th>
      <th>日曜日</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th><%= @schedule.day_start %></th>
      <th><%= @schedule.day_end %></th>
      <th><%= @schedule.week.time_Mon %></th>
      <th><%= @schedule.week.time_Tue %></th>
      <th><%= @schedule.week.time_Wed %></th>
      <th><%= @schedule.week.time_Thu %></th>
      <th><%= @schedule.week.time_Fri %></th>
      <th><%= @schedule.week.time_Sat %></th>
      <th><%= @schedule.week.time_Sun %></th>
    </tr>
  </tbody>
</table>
<%= link_to 'スケジュールタイトル/日程の編集', edit_schedule_path(@schedule) , class: 'btn btn-default' %>
<%= link_to 'このスケジュールを削除する', @schedule, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>

<h1><%= @schedule.schedule_title %>のタスク一覧</h1>

<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>タイトル</th>
        <th>開始ページ</th>
        <th>終了ページ</th>
        <th>1ページあたりの目安時間(分)</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.task_title, schedule_task_path(@schedule) %></td>
          <td><%= task.page_start%></td>
          <td><%= task.page_end %></td>
          <td><%= task.time_par_page %></td>
        </tr>
      <% end %>
    </tbody> 
  </table>
  <div>
    <%= paginate @tasks %>
  </div>
<% end %>
<%= link_to '新規タスク作成', new_schedule_task_path(@schedule), class: "btn btn-primary"  %>

