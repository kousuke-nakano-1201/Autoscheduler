<div class="row">
  <%= form_for(schedule) do |f| %>
    <% if schedule.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% schedule.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="clearfix">
    <div class="col-xs-6">
    <div class="form-group">
      <%= f.label :schedule_title, 'タイトル' %>
      <%= f.text_field :schedule_title , class: 'form-control'%>
    </div> 
    </div> 
    </div> 
    <div class="clearfix">
    <div class="form-group">
      <%= f.label :day_start, '開始日' %>
      <%= f.date_select :day_start , use_month_numbers: true, class: 'form-control'%>
      <%= f.label :day_end, '～終了日' %>
      <%= f.date_select :day_end , use_month_numbers: true, class: 'form-control'%>
    </div>
    </div>
    <h3>1週間の勉強時間</h3>
    <%= f.fields_for :week do |fin| %>
      <div class="form-inline">
      <div class="form-group">
        <%= fin.label :time_Mon, '・月曜日' %>
        <%= fin.number_field :time_Mon , class: 'form-control'%><strong>時間　</strong>
      </div>
      <div class="form-group">
        <%= fin.label :time_Tue, '・火曜日' %>
        <%= fin.number_field :time_Tue , class: 'form-control'%><strong>時間　</strong>
      </div> 
      <div class="form-group">
        <%= fin.label :time_Wed, '・水曜日' %>
        <%= fin.number_field :time_Wed , class: 'form-control'%><strong>時間　</strong>
      </div> 
      <div class="form-group">
        <%= fin.label :time_Thu, '・木曜日' %>
        <%= fin.number_field :time_Thu , class: 'form-control'%><strong>時間　</strong>
      </div> 
      <div class="form-group">
        <%= fin.label :time_Fri, '・金曜日' %>
        <%= fin.number_field :time_Fri , class: 'form-control'%><strong>時間　</strong>
      </div> 
       
      <div class="form-group">
        <%= fin.label :time_Sat, '・土曜日' %>
        <%= fin.number_field :time_Sat , class: 'form-control'%><strong>時間　</strong>
      </div> 
        
      <div class="form-group">
        <%= fin.label :time_Sun, '・日曜日' %>
        <%= fin.number_field :time_Sun , class: 'form-control'%><strong>時間　</strong>
      </div> 
      </div>
    <% end %>
    <%= f.submit 'スケジュールを作成', class: 'btn btn-primary'%>
  <% end %>
</div> 